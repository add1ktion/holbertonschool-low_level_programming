void handle_error(const char *msg, int fd_from, int fd_to, int code)
{
	if (msg) dprintf(STDERR_FILENO, "%s", msg);
	if (fd_from >= 0) close(fd_from);
	if (fd_to >= 0) close(fd_to);
	exit(code);
}

int main(int argc, char *argv[])
{
	int fd_from = -1, fd_to = -1;
	ssize_t n_read, n_write;
	char buffer[1024];

	if (argc != 3)
		handle_error("Usage: cp file_from file_to\n", -1, -1, 97);

	fd_from = open(argv[1], O_RDONLY);
	if (fd_from == -1)
		handle_error("Error: Can't read from file\n", -1, -1, 98);

	fd_to = open(argv[2], O_WRONLY | O_CREAT | O_TRUNC, 0664);
	if (fd_to == -1)
		handle_error("Error: Can't write to file\n", fd_from, -1, 99);

	while ((n_read = read(fd_from, buffer, 1024)) > 0)
	{
		n_write = write(fd_to, buffer, n_read);
		if (n_write != n_read)
			handle_error("Error: Can't write to file\n", fd_from, fd_to, 99);
	}
	if (n_read == -1) handle_error("Error: Can't read from file\n", fd_from, fd_to, 98);

	if (close(fd_from) == -1 || close(fd_to) == -1)
		handle_error("Error: Can't close file descriptors\n", -1, -1, 100);

	return 0;
}
